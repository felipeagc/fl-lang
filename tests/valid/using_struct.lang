import c "core:c"

typedef Hello struct { 
    a: i32,
    b: struct {
        c: *char,
    },
};

func main() {
    using c;

    var h: Hello;
    h.a = 123;

    using h;
    using h.b;
    a = 321;

    b.c = c"Yo";

    printf(c"a = %d\n", a);
    printf(c"h.a = %d\n", h.a);

    printf(c"b.c = %s\n", b.c);
    printf(c"h.b.c = %s\n", h.b.c);

    printf(c"c = %s\n", c);
}
