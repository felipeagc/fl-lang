proc main() void {
    var test: i32 = 321;

    if (test) printf(c"Hello!\n");

    if (test || false) {
        printf(c"Hello!\n");
    } else {
        printf(c"No: %d!\n", constant);
        const constant: i32 = 9;
    }

    printf(c"Yo: %d!\n", test);

    {
        var test2: i32 = 456;
        printf(c"Yo: %d!\n", test);
        printf(c"Yo: %d!\n", test);
        printf(c"Yo: %d!\n", test2);
        printf(c"Yo: %d!\n", constant);
        const constant: i32 = 534;
    }

    if (false || false) abort();
    if (true && false) abort();
    if (false && false) abort();
    if (false && true) abort();
    if (!(true && true)) abort();

    return;

    var n: i32 = 0;
    while (n < 5) {
        printf(c"%d\n", n);
        n = n + 1;
        break;
    }
    printf(c"n = %d\n", n);
}

proc "c" printf(fmt: *char, ...) i32;
