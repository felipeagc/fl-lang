module main

import "core:c"

typedef MyUnion union {
    a: u64,
    b: float,
};

func main() {
    var u: MyUnion;
    u.b = 123133.1258;

    if (@size_of(u) != @size_of(u64)) c.abort();
    if (@align_of(u) != @align_of(u64)) c.abort();

    c.printf(c"%f\n", u.b);
    c.printf(c"%lu\n", u.a);

    if (cast(*void)&u.a != cast(*void)&u.b) c.abort();
}
