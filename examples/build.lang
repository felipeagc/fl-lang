module main

import build "core:build"

func main() {
    var builder: build.Builder;

    build.add_target(&builder, &build.Target{
        input = "ray.lang",
        output = "ray",
    });

    build.add_target(&builder, &build.Target{
        input = "table.lang",
        output = "table",
    });

    build.add_target(&builder, &build.Target{
        input = "sdl_game.lang",
        output = "sdl_game",
        link_with = []string{"SDL2"},
    });

    build.build(&builder);
}
